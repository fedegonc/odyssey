---
export interface Color {
  name: string;
  hex: string;
}

const colors: Color[] = [
  { name: 'Primary', hex: '#007bff' },
  { name: 'Secondary', hex: '#6c757d' },
  { name: 'Success', hex: '#28a745' },
];
---

<div class="colors">
  {colors.map((color) => (
    <div class="color-item" style={`background-color: ${color.hex};`}>
      <p>{color.name}</p>
      <p>{color.hex}</p>
    </div>
  ))}
</div>

<style>
  .colors {
    display: flex;
    gap: 1rem;
    padding: 1rem;
  }

  .color-item {
    width: 100px;
    height: 100px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 5px;
    color: white;
    font-family: Arial, sans-serif;
    text-align: center;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }
</style>