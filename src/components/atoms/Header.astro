---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="header">
  <div class="header-content">
    <h1>{title}</h1>
  </div>
</header>

<style>
  .header {
    width: 100%;
    height: 80px;
    background-color: #f1f1f1;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid #ccc;
  }

  .header-content {
    font-family: Arial, sans-serif;
    font-size: 24px;
    font-weight: bold;
    color: #333;
  }
</style>
